<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action != "undefined" && action =="edit") { %>
                    <div class="alert alert-primary">Kategori Güncellendi</div>
                <% } %>
                <% if (action != "undefined" && action =="create") { %>
                    <div class="alert alert-success">Kategori Eklendi</div>
                <% } %>
                <% if (action != "undefined" && action =="delete") { %>
                    <div class="alert alert-danger">Kategori Silindi</div>
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th>Kategori Adı</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                            <tr>
                                <td>
                                    <%= category.categoryid %>
                                </td>
                                
                                <td>
                                    <%= category.categoryName %>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/category/<%= category.categoryid %>">Edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= category.categoryid %>">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
